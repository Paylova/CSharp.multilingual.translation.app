@model sozluk.Models.entity.Vocabulary

@{
    ViewBag.Title = "VocabularyShow";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<h2>Kelime Güncelleme</h2>
<br />
<br />
@using (Html.BeginForm("Update", "Vocabulary", FormMethod.Post))
{
    <div>
        @Html.Label("ID")
        @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @readonly = "readonly" })
    </div>
    <br />
    <div>
        @Html.Label("Türkçe Kelime")
        @Html.TextBoxFor(m => m.Word, new { @class = "form-control", required = "required" })
    </div>
    <br />
    <div>
        @Html.Label("Dil")
        @Html.DropDownListFor(m => m.Language.Id, (List<SelectListItem>)ViewBag.vls, new { @class = "form-control", required = "required" })
    </div>
    <br />
    <div>
        @Html.Label("Çeviri")
        @Html.TextBoxFor(m => m.Translation, new { @class = "form-control", required = "required" })
    </div>
    <br />
    <div>
        <button type="submit" class="btn btn-warning" onclick="return confirm('Güncellemek İstiyor musunuz?')">Güncelle</button>
    </div>
}
<br />
@Html.ActionLink("Geri", "Index", null, new { @class = "btn btn-primary" })

